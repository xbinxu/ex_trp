{sys, [
       {lib_dirs, ["../../", "../deps/"]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "trps", "1",
        [
         kernel,
         stdlib,
         crypto,
         lager,
         ssl, 
         trps
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "trps"},
       {profile, embedded},
       {incl_cond, derived},
       {mod_cond, derived},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       {app, inets, [{mod_cond, app}, {incl_cond, include}]},
       {app, crypto, [{mod_cond, app}, {incl_cond, include}]},
       {app, ssl, [{mod_cond, app}, {incl_cond, include}]},
       {app, trps, [{mod_cond, app}, {incl_cond, include}]},
       {app, lager, [{mod_cond, app}, {incl_cond, include}]}
      ]}.

{target_dir, "trps"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "log"},
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/trps", "bin/trps"},
           {copy, "files/trps.cmd", "bin/trps.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {template, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {template, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
          ]}.
